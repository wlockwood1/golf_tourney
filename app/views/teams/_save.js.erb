$("ul.errors").html("")
<% if @team.errors.any? %>
  <% @team.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".team-index").html("<%= escape_javascript(render 'index') %>")
  $("#teamModal").modal("hide")
<% end %>
